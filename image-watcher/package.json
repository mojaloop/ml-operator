{
  "name": "@mojaloop/image-watcher",
  "version": "0.1.0",
  "description": "ml-operator image watcher",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "build": "tsc && cp -R config dist",
    "build:api": "npm run build:api:inbound && npm run build:api:outbound",
    "build:api:inbound": "swagger-cli bundle -o ./src/interface/api-inbound.yaml -t yaml ./src/interface/api-inbound-template.yaml && swagger-cli validate ./src/interface/api-inbound.yaml",
    "build:api:outbound": "swagger-cli bundle -o ./src/interface/api-outbound.yaml -t yaml ./src/interface/api-outbound-template.yaml && swagger-cli validate ./src/interface/api-outbound.yaml",
    "docker:build:inbound": "docker build -t inbound-thirdparty-scheme-adapter:local -f ./docker/Dockerfile.Inbound ./",
    "docker:build:outbound": "docker build -t outbound-thirdparty-scheme-adapter:local -f ./docker/Dockerfile.Outbound ./",
    "docker:run:inbound": "docker run -p 4005:4005 inbound-thirdparty-scheme-adapter:local",
    "docker:run:outbound": "docker run -p 4006:4006 outbound-thirdparty-scheme-adapter:local",
    "lint": "eslint ./src/**/*.ts *.js",
    "pretest": "echo \"pretest - TODO...\"",
    "release": "standard-version",
    "standard": "echo '\\033[1;33m  This project uses eslint instead of standard. Use `npm run lint` instead.'",
    "start": "ts-node --project ./tsconfig.json --files --require tsconfig-paths/register ./src/cli.ts start",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' --project ./tsconfig.json --files --require tsconfig-paths/register src/cli.ts start",
    "test": "npm run test:unit",
    "test:bdd": "jest --config './jest.bdd.config.js' --testMatch '**/test/step-definitions/**/*.step.ts'",
    "test:coverage": "jest --coverage  --testMatch '**/test/unit/**/*.(test|spec).ts'",
    "test:coverage-check": "jest --coverage --testMatch '**/test/unit/**/*.(test|spec).ts'",
    "test:integration": "jest --config './jest.integration.config.js' --testMatch '**/test/integration/**/*.(test|spec).ts'",
    "test:unit": "jest --coverageThreshold='{}' --testMatch '**/test/unit/**/*.(test|spec).ts'",
    "updates:check": "npm-check-updates",
    "updates:update": "npm-check-updates -u && npm install",
    "watch": "tsc -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test",
      "post-commit": "git update-index --again",
      "pre-push": "npm test && npm run updates:check"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/thirdparty-scheme-adapter.git"
  },
  "keywords": [
    "metrics",
    "central",
    "services",
    "pisp"
  ],
  "author": "Pawe≈Ç Marzec <pawel.marzec@modusbox.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mojaloop/thirdparty-scheme-adapter/issues"
  },
  "homepage": "https://github.com/mojaloop/thirdpartyscheme-adapter#readme",
  "dependencies": {
    "@hapi/boom": "9.1.0",
    "@hapi/good": "9.0.0",
    "@hapi/hapi": "20.0.0",
    "@hapi/inert": "6.0.2",
    "@hapi/vision": "6.0.1",
    "@mojaloop/api-snippets": "^2.0.0",
    "@mojaloop/central-services-error-handling": "^10.6.0",
    "@mojaloop/central-services-health": "^10.6.0",
    "@mojaloop/central-services-logger": "^10.6.0",
    "@mojaloop/central-services-metrics": "^9.5.0",
    "@mojaloop/central-services-shared": "^11.1.3",
    "@mojaloop/sdk-standard-components": "^11.0.1",
    "@types/axios": "^0.14.0",
    "@types/redis": "^2.8.25",
    "ajv": "^6.12.4",
    "ajv-keywords": "^3.5.2",
    "axios": "^0.20.0",
    "blipp": "^4.0.1",
    "commander": "^6.0.0",
    "convict": "^6.0.0",
    "openapi-backend": "^3.5.1",
    "path": "^0.12.7",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@types/convict": "^5.2.1",
    "@types/hapi": "^18.0.3",
    "@types/hapi__hapi": "^19.0.4",
    "@types/hapi__inert": "^5.2.0",
    "@types/hapi__vision": "^5.5.1",
    "@types/jest": "26.0.10",
    "@types/node": "^14.6.0",
    "@types/rc": "^1.1.0",
    "@types/redis-mock": "^0.17.0",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "add": "^2.0.6",
    "eslint": "7.7.0",
    "eslint-config-standard": "14.1.1",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-cucumber": "^1.4.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^4.2.5",
    "jest": "26.4.1",
    "jest-cucumber": "^3.0.0",
    "jest-junit": "11.1.0",
    "lint-staged": "^10.2.11",
    "multi-file-swagger": "^2.3.0",
    "nodemon": "^2.0.4",
    "npm-audit-resolver": "2.2.1",
    "npm-check-updates": "7.1.1",
    "redis-mock": "^0.51.0",
    "source-map-support": "0.5.19",
    "standard-version": "^9.0.0",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.0.2"
  }
}
